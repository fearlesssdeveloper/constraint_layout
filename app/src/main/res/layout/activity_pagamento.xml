<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.PagamentoActivity">

    <TextView
        android:id="@+id/activity_pagamento_orientacao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="Digite as informações do cartão de crédito que você deseja usar para o pagamento"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_pagamento_valor_da_compra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="Valor da compra:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_pagamento_orientacao" />

    <TextView
        android:id="@+id/activity_pagamento_preco_pacote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="R$ 421,50"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/activity_pagamento_valor_da_compra"
        app:layout_constraintTop_toBottomOf="@+id/activity_pagamento_valor_da_compra" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/activity_pagamento_numero_cartao_wrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="Número do cartão"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_pagamento_preco_pacote">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/activity_pagamento_numero_cartao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="12"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/activity_pagamento_mes_cartao_wrapper"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="MM"
        app:layout_constraintBottom_toBottomOf="@+id/activity_pagamento_cvc_wrapper"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@id/activity_pagamento_numero_cartao_wrapper">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/activity_pagamento_mes_cartao"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="number"
            android:maxLength="2"
            android:textAlignment="center"
            android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/activity_pagamento_ano_cartao_wrapper"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:hint="AA"
        app:layout_constraintBottom_toBottomOf="@+id/activity_pagamento_cvc_wrapper"
        app:layout_constraintStart_toEndOf="@id/activity_pagamento_mes_cartao_wrapper">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/activity_pagamento_ano_cartao"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="number"
            android:maxLength="2"
            android:textAlignment="center"
            android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/activity_pagamento_cvc_wrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="CVC"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintEnd_toEndOf="@id/activity_pagamento_numero_cartao_wrapper"
        app:layout_constraintTop_toBottomOf="@id/activity_pagamento_numero_cartao_wrapper">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/activity_pagamento_cvc"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableStart="@drawable/ic_cvc_cartao_de_credito"
            android:inputType="number"
            android:maxLength="3"
            android:textAlignment="center"
            android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/activity_pagamento_nome_cartao_wrapper"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Nome do cartão"
        app:layout_constraintEnd_toEndOf="@+id/activity_pagamento_cvc_wrapper"
        app:layout_constraintStart_toStartOf="@+id/activity_pagamento_mes_cartao_wrapper"
        app:layout_constraintTop_toBottomOf="@+id/activity_pagamento_cvc_wrapper">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/activity_pagamento_nome_cartao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="12" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/activity_pagamento_botao_finaliza_compra"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/botao_redondo_laranja"
        android:textColor="@android:color/white"
        app:backgroundTint="@android:color/holo_orange_dark"
        android:text="Finalizar Compra"
        app:layout_constraintEnd_toEndOf="@+id/activity_pagamento_nome_cartao_wrapper"
        app:layout_constraintStart_toStartOf="@+id/activity_pagamento_nome_cartao_wrapper"
        app:layout_constraintTop_toBottomOf="@+id/activity_pagamento_nome_cartao_wrapper" />
</androidx.constraintlayout.widget.ConstraintLayout>